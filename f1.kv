<HomeScreen>:
    name: 'home'
    BoxLayout:
        canvas.before:
            #Color:
                #rgba: (0,.5,.5,.5)
            Rectangle:
                pos: self.pos
                size: self.size
                source: "images/city.jpg"
        orientation: "vertical"
        Label:
            text: "Welcome to the F1 App!"
            font_name: "fonts/Lcd.ttf"
            font_size: "60dp"
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            color: 1, .5, 0, 1
        Label:
            text: "Practice Tests:"
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            font_size: "20dp"
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Practice Test 1"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'Test1Intro'
            Button:
                text: "Practice Test 2"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'Test2Intro'
            Button:
                text: "Practice Test 3"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'Test3Intro'
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Practice Test 4"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'Test4Intro'
            Button:
                text: "Practice Test 5"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'Test5Intro'
            Button:
                text: "Practice Test 6"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'Test6Intro'
        Label:
            text: "Resources:"
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            font_size: "20dp"
        BoxLayout:
            orientation: "vertical"
            Button:
                text: "MTO Bus Handbook"
                on_release:
                    import webbrowser
                    webbrowser.open('http://www.mto.gov.on.ca/english/handbook/bus/index.shtml')
            Button:
                text: "Find the nearest DriveTest Centre"
                on_release:
                    import webbrowser
                    webbrowser.open('https://drivetest.ca/find-a-drive-test-centre/find_a_drivetest_centre.html#!/locations')
<Test1Intro>:
    name: 'Test1Intro'
    BoxLayout:
        canvas.before:
            Color:
                rgba: (0,.5,.5,.5)
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        Label:
            text: 'Practice Test 1'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            font_size: '40dp'
        Label:
            text: '30 Questions'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            font_size: '30dp'
        Label:
            text: 'Must get 24/30 to pass'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Home'
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'home'
            Button:
                text: 'Begin'
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'Test1Q1'
<Test1Q1>:
    name: 'Test1Q1'
    BoxLayout:
        spacing: '20dp'
        canvas.before:
            Color:
                rgba: (0,.5,.5,.5)
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        Label:
            text: 'Question 1'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            font_size: '40dp'
        Label:
            text: 'To obtain a bus licence C or F you must already hold what class of licence?'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            font_size: '30dp'
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'E.'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                on_press:
                    self.background_color = (1,0,0,1)
                    root.on_incorrect_click()
                disabled: root.button_disabled
            Button:
                text: 'D.'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                on_press:
                    self.background_color = (1,0,0,1)
                    root.on_incorrect_click()
                disabled: root.button_disabled
            Button:
                text: 'G.'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                on_press:
                    self.background_color = (0,1,0,1)
                    root.on_correct_click()
                disabled: root.button_disabled
            Button:
                text: 'A.'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                on_press:
                    self.background_color = (1,0,0,1)
                    root.on_incorrect_click()
                disabled: root.button_disabled
            Label:
                text: root.my_text
                text_size: self.size
                halign: 'center'
                valign: 'middle'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Quit'
                    on_press:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'home'
                Button:
                    text: 'Next'
                    on_press:
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'Test1Q2'
